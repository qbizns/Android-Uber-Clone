<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_paymentoption"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/please_enter_promo_code" />

   <!-- <com.tatx.userapp.customviews.CustomEditText
        android:id="@+id/cet_enter_promo_code"
        style="@style/RoundedCornerEditText"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
         />
-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <com.tatx.userapp.customviews.BackAwareEditText
            android:id="@+id/cet_enter_promo_code"
            style="@style/RoundedCornerEditText"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginBottom="@dimen/_1sdp"

            />

        <RelativeLayout
            android:id="@+id/clear_source"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="visible">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_icon" />
        </RelativeLayout>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_28sdp"
        android:orientation="horizontal"

        >


        <TextView
            android:id="@+id/tv_validate_button"
            android:layout_width="0dp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:paddingBottom="@dimen/_13sdp"
            android:textSize="@dimen/_13sdp"
            android:paddingTop="@dimen/_13sdp"
            android:text="@string/apply"
            android:textColor="@color/white" />


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/_4d4d4d"

            />
        <TextView
            android:id="@+id/tv_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="@dimen/_13sdp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:paddingBottom="@dimen/_13sdp"
            android:paddingTop="@dimen/_13sdp"
            android:text="@string/cancel"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>