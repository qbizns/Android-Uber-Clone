<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuactivity.AccountActivity">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/corner_radius_background"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:background="@drawable/logo" />

                                <com.tatx.userapp.customviews.CustomTextView
                                    style="@style/TextView12"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="@string/tatx_balance" />


                                <com.tatx.userapp.customviews.CustomTextView
                                    style="@style/TextView12"
                                    android:id="@+id/tv_currency"
                                    android:layout_marginLeft="@dimen/_10sdp"

                                    />

                                <com.tatx.userapp.customviews.CustomTextView
                                    android:id="@+id/tv_tatx_balance"
                                    style="@style/TextView12"
                                    android:layout_marginLeft="@dimen/_10sdp"

                                     />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_add_tatx_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="+"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />


                        </RelativeLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                        <RelativeLayout
                            android:id="@+id/rl_add_credit_card"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:visibility="gone"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:background="@drawable/card" />

                                <com.tatx.userapp.customviews.CustomTextView
                                    style="@style/TextView12"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="@string/add_creditcard" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_add_credit_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="+"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />


                        </RelativeLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                        <RelativeLayout
                            android:id="@+id/loyaltiicon_click"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/loyaltiicon"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:background="@drawable/ic_launcher" />

                                <com.tatx.userapp.customviews.CustomTextView
                                    style="@style/TextView12"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="@string/loyalti_points" />


                                <com.tatx.userapp.customviews.CustomTextView
                                    android:id="@+id/tv_loyalty_points"
                                    style="@style/TextView12"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:text=" 0PT" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:textSize="@dimen/_15sdp" />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_cards_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/corner_radius_background"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_credit_cards"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:scrollbars="vertical" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/corner_radius_background"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:visibility="visible"

                    >


                    <com.tatx.userapp.customviews.CustomTextView
                        style="@style/TextView12"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:singleLine="false"
                        android:text="@string/payment_type"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/ll_payment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <!--android:background="@drawable/cash_bg"-->

                        <com.tatx.userapp.customviews.CustomTextView
                            android:id="@+id/tv_payment_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/cash_color"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <com.tatx.userapp.customviews.CustomTextView
                style="@style/TextView12"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/transfer_balance_to_tatx_customer"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/corner_radius_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical">


                <com.tatx.userapp.customviews.CustomEditText
                    android:id="@+id/et_payee_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:hint="@string/email_or_phone_number"
                    android:textSize="@dimen/_12sdp"

                    />

                <com.tatx.userapp.customviews.CustomEditText
                    android:id="@+id/et_amount_to_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center"
                    android:hint="@string/enter_amount_to_credit"
                    android:inputType="number"
                    android:textSize="@dimen/_12sdp" />

                <com.tatx.userapp.customviews.CustomRippleView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                    <com.tatx.userapp.customviews.CustomTextView
                        android:id="@+id/tv_transefer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_bg_red_zero_radius"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text="@string/transfer"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </com.tatx.userapp.customviews.CustomRippleView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
