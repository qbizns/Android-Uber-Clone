<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fareestimatebg"
        >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/relativeLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_minus3sdp"
            android:layout_marginRight="@dimen/_minus3sdp"

            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/from_to" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_source_address_to_show"
                    style="@style/TextView"
                    android:paddingBottom="@dimen/_10sdp"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/divider" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_destination_address_to_show"
                    style="@style/TextView"
                    android:paddingTop="@dimen/_10sdp"
                    />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>



    <com.tatx.userapp.customviews.CustomTextView
        android:id="@+id/vehiclemodelfare_estimate"
        style="@style/TextView12"
        android:layout_marginTop="@dimen/_20sdp"
       />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="@dimen/_5sdp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"



        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/white"
       >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder_top_cornar"
            android:padding="@dimen/_10sdp"
            android:gravity="center">

            <com.tatx.userapp.customviews.CustomTextView
                style="@style/TextView15"
                android:text="@string/farestimate"
                android:textColor="@color/button__text_color"


                />
        </RelativeLayout>
        <com.tatx.userapp.customviews.CustomTextView
            android:id="@+id/faresar"
            style="@style/TextView15"
            android:text="@string/sar"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <com.tatx.userapp.customviews.CustomTextView
            android:id="@+id/amount"
            style="@style/TextView15"
            android:text="12-2323"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            />

    </LinearLayout>
    </android.support.v7.widget.CardView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/button_color"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <!--
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_100sdp"
                android:baselineAlignBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/fareestimatebg"
                />-->

    </RelativeLayout>
</LinearLayout>
