<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/faredetail_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edit_text_boarder"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder_top_cornar"
            android:gravity="center"
            android:padding="@dimen/_10sdp">

            <com.tatx.userapp.customviews.CustomTextView
                style="@style/TextView15"
                android:text="@string/fare_details"
                android:textColor="@color/button__text_color"
                />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/tw__medium_gray" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView"
                    android:text="@string/maxsize"
                    android:textColor="@color/button_color" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_cab_capacity"
                    style="@style/TextView"

                    />
            </LinearLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/tw__medium_gray"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView"
                    android:text="@string/per_km"
                    android:textColor="@color/button_color" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_sar_per_km"
                    style="@style/TextView"

                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/tw__medium_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"

                android:gravity="center"
                android:orientation="vertical">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView"
                    android:text="@string/min_fare"
                    android:textColor="@color/button_color" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_min_fare"
                    style="@style/TextView"
                    />


            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/tw__medium_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="vertical">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView"
                    android:text="@string/basefare"
                    android:textColor="@color/button_color" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_base_fare"
                    style="@style/TextView"
                    />


            </LinearLayout>


            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/tw__medium_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <com.tatx.userapp.customviews.CustomTextView

                    style="@style/TextView"
                    android:text="@string/per_min"
                    android:textColor="@color/button_color" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_price_per_min"
                    style="@style/TextView"

                    />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>