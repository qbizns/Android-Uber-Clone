<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_minus3sdp"
            android:layout_marginRight="@dimen/_minus3sdp"
            android:background="@drawable/source_destination_background"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/from_to" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_pick_address"
                    style="@style/TextView10"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_8sdp"
                    android:singleLine="true" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/divider" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_destination_address"
                    style="@style/TextView10"
                    android:gravity="center"
                    android:paddingTop="@dimen/_8sdp"
                    android:singleLine="true" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/tripdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:textColor="@color/black">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/base_fare"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_base_fare_right"
                    style="@style/TextView12"
                    android:layout_weight="1"
                    android:gravity="right" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/distance"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_distance"
                    style="@style/TextView10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_distance_cost_right"
                    style="@style/TextView12"
                    android:layout_weight="1"
                    android:gravity="right" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/duration"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_duration"
                    style="@style/TextView10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_duration_cost_right"
                    style="@style/TextView12"
                    android:layout_weight="1"
                    android:gravity="right" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/adjustment"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"


                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_rounded_duration_cost_right"
                    style="@style/TextView12"
                    android:layout_weight="1"
                    android:gravity="right" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/discount"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"


                    />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_discount"
                    style="@style/TextView12"
                    android:layout_weight="1"
                    android:gravity="right" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/sub_total"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_sub_total_cost_right"
                    style="@style/TextView12"
                    android:layout_weight="1"
                    android:gravity="right" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:text="@string/rounded_down"

                    />

                <com.tatx.userapp.customviews.CustomTextView
                    style="@style/TextView12"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center" />

                <com.tatx.userapp.customviews.CustomTextView
                    android:id="@+id/tv_rounded_sub_total_cost_right"
                    style="@style/TextView12"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#e90410" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/contact_button_bg"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.tatx.userapp.customviews.CustomTextView
                style="@style/TextView10"
                android:text="@string/previous_amount"
/>
            <com.tatx.userapp.customviews.CustomTextView
                android:id="@+id/tv_previous_amount"
                style="@style/TextView10"
                android:layout_marginTop="@dimen/_5sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.tatx.userapp.customviews.CustomTextView
                style="@style/TextView10"
                android:text="@string/current_amount"
                />

            <com.tatx.userapp.customviews.CustomTextView
                android:id="@+id/tv_current_amount"
                style="@style/TextView10"
                android:layout_marginTop="@dimen/_5sdp"
             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.tatx.userapp.customviews.CustomTextView
                style="@style/TextView10"
                android:text="@string/total_amount"
                />

            <com.tatx.userapp.customviews.CustomTextView
                android:id="@+id/tv_trip_amount"
                style="@style/TextView10"
                android:textColor="@color/button_color"
                android:layout_marginTop="@dimen/_5sdp"

                 />
        </LinearLayout>

    </LinearLayout>

    <com.tatx.userapp.customviews.CustomTextView
        style="@style/TextView12"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/rtdriver" />

    <RatingBar
        android:id="@+id/rb_rating_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1" />

    <com.tatx.userapp.customviews.CustomRippleView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <com.tatx.userapp.customviews.CustomButton
            android:id="@+id/btn_submit_invoice"
            style="@style/AppThemeButton"
            android:layout_gravity="center"
            android:background="@drawable/button_bg_red"
            android:gravity="center"
            android:text="@string/submit" />
    </com.tatx.userapp.customviews.CustomRippleView>
</LinearLayout>
    </ScrollView>
</LinearLayout>
