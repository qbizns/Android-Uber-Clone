<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <include layout="@layout/layout_title" />


    <LinearLayout
     android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <com.tatx.userapp.customviews.CustomEditText
        android:id="@+id/et_points_to_redeem"
        android:inputType="number"
        style="@style/EditText"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:hint="@string/enter_points_to_redeem"
        />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_50sdp"
    android:background="@drawable/button_bg_red"
    android:layout_marginLeft="@dimen/_50sdp"
    android:layout_marginRight="@dimen/_50sdp">

    <com.tatx.userapp.customviews.CustomButton
        android:id="@+id/tv_redeem_points"
        style="@style/AppThemeButton"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:text="@string/redeem"
        />
</LinearLayout>
    </LinearLayout>






</LinearLayout>
