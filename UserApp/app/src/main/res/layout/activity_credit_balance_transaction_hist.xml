        <com.tatx.userapp.customviews.CustomTextView
            android:id="@+id/etcredit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAllCaps="true"
            android:paddingRight="@dimen/_65sdp"
            android:text="@string/creditbaltr"
            android:textColor="@color/toolbar_title_color"
            android:textSize="@dimen/_22sdp" />
    </android.support.v7.widget.Toolbar>
    <com.tatx.userapp.customviews.CustomTextView
        android:id="@+id/recordnotfnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nofnfdat"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/saved_location_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </android.support.v7.widget.RecyclerView>

