<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            card_view:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mapImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:scaleType="fitXY"

                    />


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/mapImage"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <com.tatx.partnerapp.customviews.CustomTextView
                            android:id="@+id/date"
                            style="@style/TextView10"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            />

                        <com.tatx.partnerapp.customviews.CustomTextView
                            android:id="@+id/sar"
                            style="@style/TextView10"
                            android:layout_below="@+id/ll"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:singleLine="false"/>

                        <com.tatx.partnerapp.customviews.CustomTextView
                            android:id="@+id/rs"
                            style="@style/TextView10"
                            android:layout_alignBaseline="@id/sar"
                            android:layout_toRightOf="@id/sar"
                            android:layout_marginRight="@dimen/_5sdp"
                           android:singleLine="false"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <com.tatx.partnerapp.customviews.CustomTextView
                            android:id="@+id/vehiclemake"
                            style="@style/TextView10"
                            android:layout_width="0dp"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"

                            />


                        <com.tatx.partnerapp.customviews.CustomTextView
                            android:id="@+id/trip_status"
                            style="@style/TextView10"
                            android:layout_below="@+id/ll"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/_5sdp"

                            />



                    </LinearLayout>

                    <!--    <include layout="@layout/sv_mc_bottom_margin_view" />-->

                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <com.tatx.partnerapp.commonutills.CircleImageView
        android:id="@+id/driver_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:src="@drawable/pic" />
</FrameLayout>
